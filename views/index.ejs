<!doctype html>
<html lang="en">
<%- include('./partials/header.ejs') %>
    <section class="bg-light" >
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light ">
            <a style="font-size: 40px;" class="navbar-brand h1" href="/">Login</a>
            </nav>
        </div>
    </section>
    <section >
        <div class="row " style="height: 600px;width: 100%;">
            <div class="container bg-light shadow p-3 mb-5 bg-white rounded" style="width: 350px; margin-top: 80px;">
                <form action="/login" method="POST">
                    <div class="form-group pt-5">
                      <label >Username</label>
                      <input type="text" class="form-control" id="username"  name="username" placeholder="username">
                    </div>
                    <div class="form-group pt-5">
                      <label >Password</label>
                      <input type="password" class="form-control" id="Password" name="password" placeholder="Password">
                    </div> 
                    <a href=""><button type="submit" value="login" class="btn btn-primary mt-5">Login</button></a>
                  </form>
                   <% if(locals.err_message){%>
                    <div>
                       <h4><%=err_message%></h4>
                    </div>
                    <%}%>
            </div>
        </div> 
    </section>
    <%- include('./partials/footer.ejs') %>
</html>